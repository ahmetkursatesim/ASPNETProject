@using Myproject.Web.Areas.Authors.Models
@model IEnumerable<Myproject.Authors.DTO.GetAuthorOutput>
@{
    ViewBag.Title = "Index";
}
@section scripts
{
    <environment names="Development">
        <script src="~/Views/Author/Index.js" asp-append-version="true"></script>
    </environment>

}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">
        <div class="header">
            <h2>
                Kitaplar
            </h2>
            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>Refresh</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="body table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Yazar Adı</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Düzenleme Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tenant in Model)
                    {
                    <tr>
                        <td>@tenant.AuthorName
                        <td>@tenant.Modified_at</td>
                        <td>
                        <td>@tenant.Created_at</td>

                        <td class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">menu</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#" class="waves-effect waves-block edit-tenant" data-tenant-id="@tenant.Id" data-toggle="modal" data-target="#TenantEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                <li><a href="#" class="delete-author" data-author-id="@tenant.Id" data-author-name="@tenant.AuthorName"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                            </ul>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="#AuthorCreateModal">
                <i class="material-icons">add</i>
            </button>
        </div>


    </div>
</div>
<div class="modal fade" id="AuthorCreateModal" tabindex="-1" role="dialog" aria-labelledby="AuthorCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form name="tenantCreateForm" role="form" novalidate class="form-validation">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <span>AuthorCreate</span>
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group form-float">
                        <div class="form-line">
                            <input class="form-control" type="text" name="AuthorName" required maxlength="256" minlength="2">
                            <label class="form-label">"AuthorName"</label>
                        </div>
                    </div>
                  
                 
                   
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                    <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                </div>
            </form>
        </div>
    </div>

</div>